{
  "name": "ai-e2e-test-framework",
  "version": "0.1.0-alpha",
  "description": "AI-Powered End-to-End Testing Framework using Playwright MCP and LangGraph.js",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-e2e-test": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "e2e-testing",
    "playwright",
    "ai",
    "test-automation",
    "mcp",
    "langgraph",
    "accessibility",
    "testing-framework"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-e2e-test-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-e2e-test-framework/issues"
  },
  "homepage": "https://github.com/your-org/ai-e2e-test-framework#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/core": "^0.3.73",
    "@langchain/google-genai": "^0.2.17",
    "@langchain/langgraph": "^0.0.26",
    "@langchain/openai": "^0.6.11",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.2",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "@playwright/mcp": "latest"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@google/generative-ai": "^0.2.1",
    "openai": "^4.20.1"
  },
  "files": [
    "dist/**/*",
    "docs/**/*",
    "README.md",
    "LICENSE"
  ]
}
